set nocompatible

syntax on

set background=dark

set encoding=utf-8
set fileencodings=utf8,cp1251
set termencoding=utf-8

set showmode
set expandtab
set smarttab
set tabstop=2
set shiftwidth=2
set softtabstop=2
set autoindent

set number
set relativenumber

set wrap
set linebreak

set incsearch
set hlsearch

set ruler
set hidden
set showmatch
set novisualbell

set nobackup
set noswapfile

